<div class="container">

  <!-- Outer Row -->
  <div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <!-- Nested Row within Card Body -->
          <div class="row">
            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
            <div class="col-lg-6">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">Editing Expense</h1>
                </div>
                <form class="user">
                  <div class="form-group">
                    <input type="hidden" id="expenseId" name="expenseId" value="{{expenseDetails._id}}">
                    <label for="expenseName">Name</label>
                    <input type="text" class="form-control form-control-user" id="expenseName" name="expenseName"
                      aria-describedby="expenseName" placeholder="{{expenseDetails.name}}" required>
                  </div>
                  <div class="form-group">
                    <label for="amount">Amount</label>
                    <input type="number" class="form-control form-control-user" id="amount" name="amount"
                      aria-describedby="amount" placeholder="{{expenseDetails.amount}}" required>
                  </div>
                  <div class="form-group">
                    <label for="category">Category</label>
                    <input type="text" class="form-control form-control-user" id="category" name="category"
                      aria-describedby="category" placeholder="{{expenseDetails.category}}" required>
                  </div>
                  <div class="form-group">
                    <label for="comment">Comment</label>
                    <input type="text" class="form-control form-control-user" id="comment" name="comment"
                      aria-describedby="comment" placeholder="{{expenseDetails.comment}}" required>
                  </div>
                  <button class="btn btn-primary btn-user btn-block" type="submit" id="addExpenseBtn">Edit
                    Expense</button>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>

  </div>

</div>

<script src="/javascripts/editExpense.js"></script>
